<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hyerim.testzxing.MainActivity"
    android:gravity="center_horizontal">

    <ImageView
    android:layout_width="250dp"
    android:layout_height="120dp"
    android:background="@drawable/barcode_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="2016-1학기 IoT 개론 및 실습\n7조 Hi-Pass Cart"
        android:gravity="center_horizontal" />

    <Button android:id="@+id/scan_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/scan"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:background="#FAF5B3" />


    <TextView
        android:id="@+id/scan_format"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scan_button"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:id="@+id/scan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/scan_format"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_gravity="left"
        android:layout_marginLeft="100dp" />

    <Button android:id="@+id/socket_button"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/socket_test"
        android:textSize="20dp"
        android:singleLine="true"
        android:background="#FAF5B3" />

    <TextView
        android:id = "@+id/tv_response"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />
</LinearLayout>

<!DOCTYPE html>
<html>
  <head>
    <title>Orders</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="smartCart">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <ui-view></ui-view>
      </div>
    </div>

    <script type="text/ng-template" id="/home.html">
      <div class="page-header">
        <h1>계산시간</h1>
      </div>

      <div ng-repeat="order in orders">

        <span style="font-size:20px; margin-left:10px;">
          <a ng-show="order.time" href="#/orders/{{order._id}}">
            {{order.time}}
          </a>
          <span ng-hide="order.time">
            {{order.time}}
          </span>
        </span>
        <span>
          <a href="#/orders/{{order._id}}"> product </a>
        </span>
      </div>
    </script>


    <script type="text/ng-template" id="/orders.html">
      <div class="page-header">
        <h3>
          <a ng-show="order.time" href="#/home">
            {{order.time}}
          </a>
          <span ng-hide="order.time">
            {{order.time}}
          </span>
        </h3>
      </div>
      <div ng-repeat="product in order.products">

        <span style="font-size:20px; margin-left:10px;">
          {{product.name}}
          {{product.price}}
        </span>
      </div>

      </script>
  </body>
</html>
